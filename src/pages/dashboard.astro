---
import { getSessionUser } from '@/lib/auth/session';
import DefaultLayout from '@/layouts/DefaultLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const user = getSessionUser(Astro.cookies);

// Redirect to login if not authenticated
if (!user) {
  return Astro.redirect('/login');
}
---

<DefaultLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <section class="py-28 lg:pt-44 lg:pb-32">
    <div class="container">
      <div class="mx-auto max-w-2xl">
        <h1 class="text-4xl font-bold mb-6">Welcome, {user.name}!</h1>

        <div class="bg-card border rounded-lg p-6 mb-6">
          <h2 class="text-2xl font-semibold mb-4">Your Profile</h2>
          <div class="space-y-2">
            {user.picture && (
              <div class="mb-4">
                <img
                  src={user.picture}
                  alt={user.name}
                  class="w-24 h-24 rounded-full"
                />
              </div>
            )}
            <p><strong>Name:</strong> {user.name}</p>
            <p><strong>Email:</strong> {user.email}</p>
            <p><strong>User ID:</strong> {user.id}</p>
          </div>
        </div>

        <div class="space-x-4">
          <a
            href="/"
            class="inline-block bg-primary text-primary-foreground px-6 py-2 rounded-md hover:bg-primary/90"
          >
            Go to Home
          </a>
          <a
            href="/api/auth/logout"
            class="inline-block bg-destructive text-destructive-foreground px-6 py-2 rounded-md hover:bg-destructive/90"
          >
            Logout
          </a>
        </div>
      </div>
    </div>
  </section>
</DefaultLayout>
