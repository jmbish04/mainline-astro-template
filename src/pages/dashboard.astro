---
import DefaultLayout from '@/layouts/DefaultLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<DefaultLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <section class="py-28 lg:pt-44 lg:pb-32">
    <div class="container">
      <div class="mx-auto max-w-2xl">
        <h1 class="text-4xl font-bold mb-6">Dashboard</h1>

        <div class="bg-card border rounded-lg p-6 mb-6">
          <h2 class="text-2xl font-semibold mb-4">Welcome</h2>
          <p class="text-muted-foreground">
            This is your dashboard. Authentication will be handled by Cloudflare Access.
          </p>
        </div>

        <div class="space-x-4">
          <a
            href="/"
            class="inline-block bg-primary text-primary-foreground px-6 py-2 rounded-md hover:bg-primary/90"
          >
            Go to Home
          </a>
        </div>
      </div>
    </div>
  </section>
</DefaultLayout>
